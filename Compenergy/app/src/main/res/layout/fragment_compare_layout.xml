<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_compare_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false" >

    <RelativeLayout
        android:id="@+id/fragment_compare_upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top|start"
        android:padding="8dp" >

        <TextView
            android:id="@+id/fragment_compare_upper_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="36sp"
            android:textColor="@color/dark_text"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:text="@string/placeholder_test_item_1_name" />

        <LinearLayout
            android:id="@+id/fragment_compare_upper_item_linear_layout_amount_and_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fragment_compare_upper_item_name">

            <TextView
                android:id="@+id/fragment_compare_upper_item_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="22sp"
                android:textColor="@color/gray_text"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/placeholder_test_item_1_energy" />

            <TextView
                android:id="@+id/fragment_compare_upper_item_energy_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="16sp"
                android:textColor="@color/gray_text"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="8dp"
                android:text="@string/placeholder_test_item_1_unit"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_compare_middle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp" >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_compare_lower_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:padding="8dp" >

        <TextView
            android:id="@+id/fragment_compare_lower_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="36sp"
            android:textColor="@color/dark_text"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/fragment_compare_lower_item_linear_layout_amount_and_unit"
            android:text="@string/placeholder_test_item_2_name" />

        <LinearLayout
            android:id="@+id/fragment_compare_lower_item_linear_layout_amount_and_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/fragment_compare_lower_item_energy_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textSize="16sp"
                android:textColor="@color/gray_text"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="8dp"
                android:text="@string/placeholder_test_item_2_unit"/>

            <TextView
                android:id="@+id/fragment_compare_lower_item_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="22sp"
                android:textColor="@color/gray_text"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/placeholder_test_item_2_energy" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>